<?xml version="1.0"?>
<config xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
        xs:noNamespaceSchemaLocation="urn:Weline_Framework::Event/etc/xsd/event.xsd"
        xmlns="urn:Weline_Framework::Event/etc/xsd/event.xsd">
    <event name="Framework_View::header">
        <observer name="Weline_Frontend::header" instance="Weline\Frontend\Observer\Header" disabled="false" shared="true"/>
    </event>
    <event name="Framework_View::footer">
        <observer name="Weline_Frontend::footer" instance="Weline\Frontend\Observer\Footer" disabled="false" shared="true"/>
    </event>
    <event name="Framework_Resource::compiler">
        <observer name="Weline_Frontend::compiler" instance="Weline\Frontend\Observer\Compiler" disabled="false" shared="true"/>
    </event>
    <event name="Weline_Framework::maintenance">
        <observer name="Weline_Frontend::maintenance" instance="Weline\Frontend\Observer\Maintenance" disabled="false" shared="true"/>
    </event>
</config>